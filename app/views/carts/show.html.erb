<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% #raise cart.inspect %>
  <% if cart == {} %>
    <mark class="alert alert-info">
      <span>You do not have any products in the cart! Try to add some --> <span>
      <a href="/" style="color: darkblue">Return</a>
    </mark>
  <% else %>
    <%= render 'cart' %>
  <% end %>

</section>
